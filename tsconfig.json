{
  "compilerOptions": {
  
      "target": "es2016",                                 
      "module": "commonjs",                                
       "rootDir": "./src",                                   

    "outDir": "./dist",                              
       "esModuleInterop": true,                             
       "forceConsistentCasingInFileNames": true,            

    /* Type Checking */
    "strict": true,                                      
       "skipLibCheck": true                                 
  },
  "typeRoots": ["./node_modules/@types", "./"],
"include": [
    "./src/**/*",
    "../api/**/*",
    "./global.d.ts"
  ],
}